{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": ["vitest/globals"]
    },
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "template"
    ]
}
